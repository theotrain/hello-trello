@import 'whitespace-reset.css'
@import 'datepicker.min.css'
@import 'mixins'
@import 'dragula'

html
  height: 100%
   
body
  input-font()
  background-color: colors.main
  color: colors.text-light
  height: 100%
  width: 100%
  overflow-y: hidden

body > header
  overflow-x: hidden
  height: 40px
  width: 100%
  background: no-repeat center url('/images/hello.png')
  background-color: colors.head
  border-bottom: 1px solid #0070b2
  .btn
    display: inline-block
    background-color: colors.head-inner
    border: none
    height: 30px
    border-radius()
    margin: 5px
    outline: none
    &:hover
      background-color: colors.head-inner-hover
    &:focus
      background-color: white
  .search-input
    background-color: rgba(255,255,255,.3)
    border-radius()
    border: none
    color: colors.text-light
    float: left
    font-size: 13px
    height: 30px
    outline: none
    margin: 0
    min-height: 30px
    padding-right: 30px
    padding-left: 8px
    line-height: 19px
    -webkit-transition: width 150ms
    transition: width 150ms
    width: 180px
    z-index: 1
    &:hover
      background-color: colors.head-inner-hover
    &:focus
      background-color: white
      color: colors.text-dark
  a.search-icon
    min-height: 30px
    min-width: 30px
    background-image: url('/images/search.png')
    background-repeat: no-repeat
    background-position: center center
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 0;
    -webkit-transition: background 85ms,color 85ms;
    transition: background 85ms,color 85ms;
    z-index: 2;
  .search-box
    float: left;
    margin: 5px 8px 5px 5px;
    position: relative;
    z-index: 1;   
  .notification
    width: 30px
    top: 0px
    float: right
    background-image: url('/images/notification.png')
    background-repeat: no-repeat
    background-position: center center

#subhead
  height: 45px
  color: colors.text-light
  font-size: 18px
  font-weight: bold
  line-height: 45px
  padding: 0 18px;
  
main
  position: relative;
  overflow-x: auto
 
#scrollbar-style::-webkit-scrollbar
  background-color: colors.scrollbar.bg
  border-radius: 7px

#scrollbar-style::-webkit-scrollbar-thumb
  background-color: colors.scrollbar.thumb
  border-radius: 7px
  

#list-container
  box-sizing: border-box
  color: colors.text-light
  padding: 0 5px 10px 5px
  overflow-x: auto
  display: table
  
span.clear
  content: ''
  clear: both
  display: block

.list-wrapper
  display: table-cell
  min-width: 270px
  vertical-align: top

.list
  margin: 0 5px
  border-radius()
  box-sizing: border-box
  color: colors.text-dark
  width: 270px
  background-color: colors.list
  position: relative
  .list-cards
    overflow-y: auto
    padding: 0 10px
    min-height: 10px
  header
    font-size: 14px
    font-weight: bold
    padding: 7px 6px 6px 6px
    form
      display: none
    textarea
      border-radius()
      input-font()
      font-weight: bold
      resize: none
      outline: none
      border: none
      padding 3px 5px
      width: 220px
      overflow: none
    .list-name
      border-radius()
      input-font()
      font-weight: bold
      outline: none
      border: none
      padding 3px 5px
      width: 220px
      cursor: pointer
    .more
      min-height: 26px
      min-width: 26px
      position: absolute
      top: 5px
      right: 5px
      background: url('/images/more.png') no-repeat center
      &:hover
        background-color: colors.more-hover
      
  a
    outline: none
    &:link
      color: colors.text-dark-faded
      text-decoration: none
    &:visited
      color: colors.text-dark-faded
      text-decoration: none
    &:hover
      color: colors.text-dark 
      text-decoration: underline
    footer
      padding: 15px 12px 10px 12px
      &:hover
        background: colors.list-footer-hover-bg
    
div.card
  position: relative
  background-color: colors.card
  padding: 5px 8px 10px 8px
  border-radius()
  box-shadow: 0 1px 0 colors.card-shadow
  max-width: 300px
  min-height: 20px
  cursor: pointer
  &+div.card
    margin-top: 7px
  .edit
    display: none
    position: absolute
    margin: 3px
    right: 0px
    top: 0px
    background: url('/images/edit-pen.png') no-repeat center
    background-color: colors.card-hover
    min-height: 26px
    min-width: 26px
    border-radius()
    opacity: .4
    &:hover
      opacity: 1
      font-size: 14px
  &:hover
    background-color: colors.card-hover
    .edit
      display: block
  textarea
    input-font()
    color: colors.text-dark 
    overflow: none
    box-sizing: padding-box
    resize: none
    border: none
    outline: none
    width: 100%
    margin-bottom: 4px
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
    padding: 0
  .card-labels
    margin: 0 0 5px 0
    pointer-events: none
    .label
      min-height: 8px
      min-width: 42px
      margin-right: 3px
      display: inline-block
      border-radius()
        
    
[contenteditable="true"]:active,
[contenteditable="true"]:focus
  border:none
  outline:none

.card-composer
  .add-footer
    .add
      width: 60px
      padding: 8px 12px
      margin: 8px 0
      font-size: 14px
      font-weight: bold
      background: colors.add-button
      color: colors.button.text
      border-radius()
      border: none
      box-shadow: 0 1px 0 colors.add-button-shadow
      float: left
    .remove
      min-width: 26px
      margin: 12px 6px
      min-height: 26px
      background: url('/images/close.png') no-repeat center
      opacity: .4
      float: left
      &:hover
        opacity: 1
  
.card-composer
  div.card
    position: relative
    background-color: colors.card
    padding: 10px 8px
    border-radius()
    box-shadow: 0 1px 0 colors.card-shadow
    margin-top: 7px

.add-list
  height: 40px
  width: 270px
  display: block
  margin: 0 5px
  padding-left: 12px
  background: colors.add-list-button
  color: colors.add-list-text
  font-size: 14px
  text-align: left
  border: none
  border-radius()
  &:hover
    background: colors.add-list-button-hover
  &:focus
    outline: none
    
.add-list-form
  display: none;
  margin: 0 5px
  padding: 4px 4px 0 4px
  border-radius()
  box-sizing: border-box
  color: colors.text-dark
  width: 270px
  background-color: colors.list
  &:after
    content: ''
    clear: both
    display: block
  input
    border-radius()
    input-font()
    color: colors.text-dark 
    padding: 9px 
    overflow: hidden
    box-sizing: border-box
    word-wrap: break-word
    resize: none
    border: 1px solid colors.add-list-input-border
    background: colors.add-list-input-inner
    -webkit-box-shadow: inset 0px 0px 20px 1px rgba(0,0,0,0.1)
    -moz-box-shadow: inset 0px 0px 20px 1px rgba(0,0,0,0.1)
    box-shadow: inset 0px 0px 20px 1px rgba(0,0,0,0.1)
    outline: none
    width: 100%
  .add-footer
    .add
      width: 60px
      padding: 8px 12px
      margin: 4px 0 0 0
      font-size: 14px
      font-weight: bold
      background: colors.add-button
      color: colors.button.text
      border-radius()
      border: none
      outline: none
      box-shadow: 0 1px 0 colors.add-button-shadow
      float: left
    .remove
      min-width: 26px
      margin: 8px 6px
      min-height: 26px
      background: url('/images/close.png') no-repeat center
      opacity: .4
      float: left
      &:hover
        opacity: 1

.modal
  z-index: 1
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.5);
  position: fixed
  left: 0
  overflow: auto
  top: 0
           
.modal-content
  width: 730px
  margin: 48px auto auto auto
  position: relative
  z-index: 2
  border-radius()
  background: colors.modal.bg
  color: colors.text-dark
  h2
    font-weight: bold
  header
    padding: 17px 50px 5px 45px
    font-size: 18px
    min-height: 30px
    background: no-repeat url('/images/detail-icon.jpg')
    background-position: left 15px top 20px
    textarea
      color: colors.text-dark
      padding 3px 5px
      border-radius()
      input-font()
      font-weight: bold
      border: none
      resize: none
      outline: none
      width: 95%
      &.disabled
        background: none

  .close
    min-width: 26px
    min-height: 26px
    top: 10px
    right: 10px
    position: absolute
    background: url('/images/close.png') no-repeat center
    opacity: .4
    &:hover
      opacity: 1
  main
    width: 575px
    padding: 0 25px 15px 15px
    box-sizing: border-box
    float: left
    h5
      color: colors.text-dark-faded
      font-weight: normal
    .card-detail-labels
      padding-left: 34px
      margin-bottom: 28px
      .label-list
        margin-top: 8px
        .label
          vertical-align: top
          height: 18px
          min-width: 35px
          display: inline-block
          padding: 7px 10px
          font-weight: bold
          color: white
          border-radius()
          text-shadow: 0 0 4px rgba(0, 0, 0, 0.5)
          &+.label
            margin-left: 5px
    .card-detail-description
      padding-left: 34px
      p
        margin-top: 7px
        cursor: pointer
      a
        text-decoration: underline
      form
        display: none;
        margin-top: 10px
        padding: none
        border-radius()
        box-sizing: border-box
        color: colors.text-dark
        &:after
          content: ''
          clear: both
          display: block
        textarea
          border-radius()
          input-font()
          color: colors.text-dark 
          padding: 9px 
          margin: 0
          overflow: hidden
          box-sizing: border-box
          word-wrap: break-word
          resize: none
          border: 1px solid colors.card-shadow
          background: colors.modal.description-textarea
          -webkit-box-shadow: inset 0px 0px 7px 1px rgba(0,0,0,0.07)
          -moz-box-shadow: inset 0px 0px 7px 1px rgba(0,0,0,0.07)
          box-shadow: inset 0px 0px 7px 1px rgba(0,0,0,0.07)
          outline: none
          width: 100%
        .add-footer
          .add
            width: 60px
            padding: 8px 12px
            margin: 4px 0 0 0
            font-size: 14px
            font-weight: bold
            background: colors.add-button
            color: colors.button.text
            border-radius()
            border: none
            outline: none
            box-shadow: 0 1px 0 colors.add-button-shadow
            float: left
          .remove
            min-width: 26px
            margin: 8px 6px
            min-height: 26px
            background: url('/images/close.png') no-repeat center
            opacity: .4
            float: left
            &:hover
              opacity: 1
    .card-due-date
      padding-left: 34px
      margin-bottom: 20px
      .due-link
        display: inline-block
        margin-top: 8px
        padding: 7px
        background: colors.modal.disabled
        color: colors.text-dark-faded
        text-decoration: underline
        &:hover
          color: colors.text-dark
          background: colors.modal.date-hover
          cursor: pointer
    .add-comment
      margin-top: 27px
      padding: 0 0 0 34px
      background: no-repeat url('/images/add-comment-icon.jpg')
      form
        text-align: right
        margin-top: 10px
        textarea
          width: 100%
          padding: 10px
          color: colors.text-dark 
          border-radius()
          input-font()
          border: none
          resize: none
          outline: none
          box-sizing: border-box
          box-shadow: 0 1px 0 colors.card-shadow
        button.comment
          input-font()
          width: 60px
          padding: 8px 12px
          margin: 8px 0
          font-size: 14px
          font-weight: bold
          background: colors.add-button
          color: colors.button.text
          border-radius()
          border: none
        button.disabled
          background-color: colors.modal.disabled
          color: colors.text-dark-faded
          box-shadow: none
          cursor: default
    .comments
      padding-left: 34px
      padding-bottom: 12px
      background: no-repeat url('/images/comments-icon.jpg')
      h2
      .comment
        padding: 12px 0 12px 0
        &+.comment
          border-top: 1px solid colors.modal.btn-outline
        .comment-body
          margin-bottom: 10px
          display: inline-block
          border-radius()
          background-color: colors.card
          padding: 10px 8px
          border-radius()
          box-shadow: 0 1px 0 colors.card-shadow
        .comment-date
          color: colors.text-dark-faded
          font-size: 12px
          
  .sidebar
    width: 155px
    padding: 8px 12px 12px 0
    float:right
    box-sizing: border-box
    .card-detail-btn-group
      &+.card-detail-btn-group
        margin-top: 30px
      h2
        margin-bottom: 6px
      button
        width: 100%
        padding: 7px 10px
        color: colors.text-dark
        height: 33px
        font-size: 15px
        font-weight: bold
        text-align: left
        border-radius()
        border: 1px solid colors.modal.btn-outline
        box-shadow: 0 1px 0 colors.modal.btn-outline
        outline: none
        background: #ffffff; /* Old browsers */
        background: -moz-linear-gradient(top, #ffffff 0%, #f9f9f9 100%) /* FF3.6-15 */
        background: -webkit-linear-gradient(top, #ffffff 0%,#f9f9f9 100%) /* Chrome10-25,Safari5.1-6 */
        background: linear-gradient(to bottom, #ffffff 0%,#f9f9f9 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
        &:hover
          background: colors.modal.btn-hover
          color: white
          border: none
          box-shadow: 0 1px 0 rgba(0,0,0,0.3)
        &:disabled
          opacity: .5
          &:hover
            background: #ffffff; /* Old browsers */
            background: -moz-linear-gradient(top, #ffffff 0%, #f9f9f9 100%) /* FF3.6-15 */
            background: -webkit-linear-gradient(top, #ffffff 0%,#f9f9f9 100%) /* Chrome10-25,Safari5.1-6 */
            background: linear-gradient(to bottom, #ffffff 0%,#f9f9f9 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
            color: inherit
            border: 1px solid colors.modal.btn-outline
            box-shadow: 0 1px 0 colors.modal.btn-outline
        &+button
          margin-top: 6px
  &:after
    clear: both
    display: block
    content: '' 

#popup
  position: absolute
  left: 0px
  top: 0px
 
#date-view
  width: 275px
  padding: 10px
  color: colors.text-dark
  background: white
  border-radius()
  z-index: 10
  position: absolute
  box-sizing: border-box
  border: colors.card-shadow
  -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
  -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
  box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.5);
  .close
    min-width: 26px
    min-height: 26px
    top: 5px
    right: 4px
    position: absolute
    background: url('/images/close.png') no-repeat center
    background-size: 70%
    opacity: .4
    &:hover
      opacity: 1
  header
    color: colors.text-dark-faded
    padding: 0 0 8px 0
    text-align: center
    border-bottom: 1px solid colors.card-shadow
  .date-entry-section
    margin-top: 10px
    .date-entry
      box-sizing: border-box
      font-weight: bold
      color: colors.text-dark
      width: 40%
      display: inline-block
      &+.date-entry
        margin-left: 30px
      input
        border-radius()
        input-font()
        padding: 10px
        margin-top: 5px
        color: colors.text-dark
        border: 1px solid colors.card-shadow
        width: 100%
  .date-buttons
    &:after
      clear: both
      display: block
      content: ''
    button
      width: 90px
      padding: 8px 12px
      margin: 8px 0
      font-size: 14px
      font-weight: bold
      border-radius()
      outline: none
      border: none
      cursor: pointer
      &.save
        background: colors.add-button
        box-shadow: 0 1px 0 colors.add-button-shadow 
        color: colors.button.text
        float: left
      &.remove
        background: colors.modal.disabled
        box-shadow: 0 1px 0 colors.card-shadow
        color: colors.button.remove
        float: right
      &:hover
        box-shadow:inset 0 0 0 99px rgba(0,0,0,0.1);
        
.datepicker
  margin: 15px auto 8px auto


#list-menu-view
  width: 240px
  popup-main()
  .list-menu-section
    margin-top: 2px
    margin-bottom: 10px
    .list-menu-item
      padding: 7px 10px
      font-weight: bold
      color: colors.text-dark
      cursor: pointer
      &:hover
        background: colors.list-menu-hover
        color: colors.list-menu-hover-text
      

#labels-view
  width: 280px
  popup-main()
  .labels-section
    margin-top: 2px
    margin-bottom: 10px
    .label-item-group
      position: relative
      .label-item
        min-height: 34px
        min-width: 150px
        margin: 0 53px 0 10px
        padding: 0 10px
        color: white
        border-radius()
        line-height: 34px
        font-weight: bold
        text-shadow: 0 0 4px rgba(0, 0, 0, 0.5)
        cursor: pointer
        &:hover
          background: colors.list-menu-hover
          color: colors.list-menu-hover-text
      .label-edit
        min-height: 34px
        min-width: 34px
        right: 10px
        top: 0px
        position: absolute
        display: block
        background: url('/images/edit-pen.png') no-repeat center
        &:hover
          background-color: colors.more-hover
      &+.label-item-group
        margin-top: 4px
