body
  // padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: colors.main
  color: colors.text-light

a
  color: #00B7FF
  
header
  height: 40px
  width: 100%
  background: no-repeat center url('/images/hello.png')
  background-color: colors.head
  border-bottom: 1px solid #0070b2
  .btn
    display: inline-block
    background-color: colors.head-inner
    border: none
    height: 30px
    border-radius: 3px
    margin: 5px
    outline: none
    &:hover
      background-color: colors.head-inner-hover
    &:focus
      background-color: white
  .search-input
    background-color: rgba(255,255,255,.3);
    border-radius: 3px;
    border: none;
    color: colors.text-light
    float: left;
    font-size: 13px;
    height: 30px;
    outline: none
    margin: 0;
    min-height: 30px;
    padding-right: 30px;
    padding-left: 8px;
    line-height: 19px;
    -webkit-transition: width 150ms;
    transition: width 150ms;
    width: 180px;
    z-index: 1;
    &:hover
      background-color: colors.head-inner-hover
    &:focus
      background-color: white
      color: colors.text-dark
  a.search-icon
    // display: inline-block
    min-height: 30px
    min-width: 30px
    background-image: url('/images/search.png')
    background-repeat: no-repeat
    background-position: center center
    cursor: pointer;
    position: absolute;
    right: 0;
    top: 0;
    -webkit-transition: background 85ms,color 85ms;
    transition: background 85ms,color 85ms;
    z-index: 2;
  .search-box
    float: left;
    margin: 5px 8px 5px 5px;
    position: relative;
    z-index: 1;
      
    
