  a
    &:link
      color: colors.text-dark-faded
      text-decoration: none
    &:visited
      color: colors.text-dark-faded
      text-decoration: none
    &:hover
      color: colors.text-dark 
      text-decoration: underline
    footer
      padding: 15px 12px 10px 12px
      &:hover
        background: colors.list-footer-hover-bg
    
div.card
  position: relative
  background-color: colors.card
  padding: 10px 8px
  border-radius: 3px
  box-shadow: 0 1px 0 colors.card-shadow
  max-width: 300px
  min-height: 20px
  cursor: pointer
  &+div.card
    margin-top: 7px
  .edit
    display: none
    position: absolute
    margin: 3px
    right: 0px
    top: 0px
    background: url('/images/edit-pen.png') no-repeat center
    background-color: colors.card-hover
    min-height: 26px
    min-width: 26px
    border-radius: 3px
    opacity: .4
    &:hover
      opacity: 1
      font-size: 14px
  &:hover
    background-color: colors.card-hover
    .edit
      display: block
  textarea
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
    color: colors.text-dark 
    overflow: none
    box-sizing: padding-box
    // word-wrap: break-word
    resize: none
    border: none
    // height: auto
    outline: none
    width: 100%
    margin-bottom: 4px
    -webkit-box-shadow: none
    -moz-box-shadow: none
    box-shadow: none
    padding: 0
    
